.wrapper_with_padding
  %button= link_to "", new_note_path, class: "fa fa-plus fa-lg"
  %button= link_to "", documents_path, class: "fa fa-file fa-lg"
  #notes.clearfix
    - unless @notes.blank?
      - @notes.each do |note|
        %a{ href: (url_for [note])}
          .note
            %p.title= note.title
            %p.date= time_ago_in_words(note.created_at)
    - else
      %h2 Add a Note
      %p It appears you haven't created any notes yet... Lets fix that. Why don't you go ahead and create a new note.
      %button= link_to "New Note", new_note_path
