<div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="projects#index">
                        TimeKeeper
                    </a>
                </li>
                <li role="presentation" class="active"><a href="#projects" aria-controls="projects" role="tab" data-toggle="tab">Projects</a></li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->
  <div id="page-content-wrapper">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">Dashboard <small>Overview</small></h1>
      </div>
    </div>
    <div class="row">
    <div class="col-md-12">
     <button type="button" class="button" data-toggle="modal" data-target="#projectModal">+</button>
       <!-- Button trigger modal -->
        <div id="projects" class="clearfix">
            <% unless current_user.memberships.blank? %>
              <% current_user.memberships.each do |membership| %>
                <%= link_to url_for [membership.project] do %>
                    <div class="project">
                      <p class="title"><%= membership.project.title %></p>
                      <p class="date"><%= time_ago_in_words(membership.project.created_at) %> ago</p>
                    </div>
                <% end %>
              <% end %>
            <% end %>
        </div>
    </div>
  </div>
</div>




<div class="modal fade" id="projectModal" tabindex="-1" role="dialog" aria-labelledby="projectModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">Create Project</h4>
        </div>
        <div class="modal-body">
          <%= form_for Project.new do |f| %>
          <p><label>Title</label><%= f.text_field :title %></p>


        </div>
        <div class="modal-footer">
            <%= f.submit "Submit", :class => 'btn btn-primary pull-right' %>
            <% end %>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
